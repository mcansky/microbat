#!/usr/bin/env ruby

require "rubygems"
require "trollop"
require "coffee_script"
require "microbat"

opts = Trollop::options do
  opt :client, "Print javascript client"
  opt :port, "Port to listen on", :default => Microbat::PORT
end

if opts[:client]
  puts CoffeeScript.compile(
    File.read("#{Microbat.root}/lib/coffee/microbat.coffee")
  )
else
  Microbat::Server.run
end
